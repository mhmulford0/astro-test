---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Matt Mulford">
	<main
		class="h-full bg-[#28282B] flex flex-col justify-start items-center p-4 overflow-y-scroll overflow-x-hidden"
	>
		<section class="w-full max-w-3xl mt-4">
			<nav class="w-full text-white text-md mb-12">
				<a
					class="mr-4 underline hover:decoration-2 underline-offset-1"
					href="https://github.com/mhmulford0">Github</a
				>
				<a
					class="mr-4 underline hover:decoration-2 underline-offset-1"
					href="https://blog.mulford.dev">Blog</a
				>
				<a
					class="mr-4 underline hover:decoration-2 underline-offset-1"
					href="/resume.pdf">Resume</a
				>
			</nav>
			<section class="mb-12">
				<div class="flex flex-col-reverse md:flex-row">
					<div class="w-2/3 mx-auto w-fill">
						<h1
							class="text-3xl md:text-5xl text-white font-bold mb-1 text-center md:text-left"
						>
							Matt Mulford
						</h1>
						<p
							class="block w-fill text-sm text-white italic text-center md:text-left"
						>
							mulford.eth
						</p>
						<p class="text-white mb-4">Full-Stack Engineer</p>
						<span
							class="block text-white italic text-md text-center md:text-left"
						>
							<a
								class="w-fill text-white italic underline text-center md:text-left"
								href="https://www.developerdao.com">Devloper DAO</a
							>: Dev, Treasurer, Talent Coordinator<br />
						</span>
					</div>

					<figure class="w-2/3 md:w-1/3 mx-auto mb-2">
						<img src="/images/gg_pfp.webp" class="rounded-lg" alt="pfp" />
					</figure>
				</div>
			</section>

			<section>
				<h2 class="text-white text-4xl font-bold mb-8">Projects</h2>
				<div class="flex flex-col md:flex-row text-white p-1">
					<div class="flex flex-col w-full md:w-64">
						<div
							class="mb-8 md:mb-0 pr-2 self-start transition ease-in delay-50 hover:-translate-y-1 hover:scale-102"
						>
							<a href="https://gllry.xyz">
								<h2 class="text-xl mb-2">Gllry</h2>

								<img
									src="https://gllry.xyz/og.jpg"
									class="rounded-lg mb-1"
									alt="gllry"
								/>

								<span class="text-md italic">Experience Your Collection</span>
							</a>
						</div>
						<div
							class="mb-8 md:mb-0 pr-2 transition ease-in delay-50 hover:-translate-y-1 hover:scale-102"
						>
							<a href="https://developerdao.com">
								<h2 class="text-xl mb-2">Developer DAO</h2>

								<img
									src="https://www.developerdao.com/social-banner.png"
									class="rounded-lg mb-1"
									alt="developer dao website"
								/>

								<span class="text-md italic">Developer DAO Website</span>
							</a>
						</div>
					</div>

					<div
						class="mb-8 md:mb-0 flex-1 pr-2 transition ease-in delay-50 hover:-translate-y-1 hover:scale-102"
					>
						<a href="https://ridewaves.app">
							<h2 class="text-xl mb-2">Wavy Name Service</h2>

							<img
								src="https://ridewaves.app/_next/image?url=%2Fimages%2Fhome.jpg&w=640&q=75"
								class="rounded-lg"
								alt="wavy name service"
							/>

							<span class="text-md italic">Simplified ENS</span>
						</a>
					</div>
					<section class="w-full md:w-64">
						<div
							class="mb-8 md:mb-0 transition ease-in delay-50 hover:-translate-y-1 hover:scale-102"
						>
							<a href="https://hyy.pe/home">
								<h2 class="text-xl mb-2">Hyype</h2>

								<img
									src="images/meta-hyype.png"
									class="rounded-lg mb-1"
									alt="hyype"
								/>

								<span class="text-md italic">Hyype - Front End Eng. (prev)</span
								>
							</a>
						</div>
					</section>
				</div>
			</section>
		</section>
	</main>
</Layout>
